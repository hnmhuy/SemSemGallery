<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="16dp">


    <TextView
        android:id="@+id/component_exception_handler_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="Skip or Replace existing one?"
        android:textSize="22dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="12dp"
        android:text="There's already an item named ... in the seleted album."
        android:textColor="@color/track_off"
        android:textSize="18dp"
        android:textStyle="normal" />


    <CheckBox
        android:id="@+id/component_exception_handler_dialog_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Apply to all items"
        android:textSize="18dp" />


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/component_exception_handler_dialog_cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:text="Skip"
            android:textSize="18dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/component_exception_handler_dialog_copy"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:text="Replace"
            android:textSize="18dp" />


    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>
