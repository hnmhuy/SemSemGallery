<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/component_confirm_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="Title"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/component_confirm_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="12dp"
        android:text="component_confirm_dialog_description"
        android:textColor="@color/track_off"
        android:textSize="18dp"
        android:textStyle="normal" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/component_confirm_dialog_cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:text="Cancel"
            android:textSize="18dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/component_confirm_dialog_confirm"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:text="Confirm"
            android:textSize="18dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>